/*
    Various elements of the system have configuration options set in Couch documents,
    which use specific document IDs.
*/

/*
    parser_config contains configuration for the parser, including which parser modules
    to load and relevant pre-parse filters for each.
*/
"parser_config": {
    "type": "config",
    "modules": [
        {
            "name": "UKHAS",
            "class": "habitat.parser_modules.ukhas_parser.UKHASParser",
            "pre-filters": [
                {
                    "type": "normal",
                    "callable": "habitat.filters.dire_emergency"
                }
            ]
        }
    ]
},

/*
    message_server_config contains configuration for the message server, including which
    sources and sinks to load.
*/
"message_server_config": {
    "type": "config",
    "sinks": [
        "habitat.parser.ParserSink",
        "habitat.archive.ArchiveSink"
    ]
}

